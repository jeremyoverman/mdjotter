{
    "compilerOptions": {
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [ "**/*.ts" ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}